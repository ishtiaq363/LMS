@model LMSWeb.Models.CourseSubjectViewModel;
<div>
    <div class="row">
        <div class="col-sm-12 col-lg-10">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title">Update Course Subject Record</h4>
                    </div>
                </div>
                <div class="card-body">

                    <form method="post">
                        <div asp-validation-summary="All"></div>
                        <div class="form-group">
                            <label class="form-label" asp-for="CourseId">Select Course</label>
                            <select asp-for="CourseId" class="form-control" readonly asp-items="ViewBag.CourseList"></select>
                        </div>
                        <div class="form-group">
                            <label class="form-label" asp-for="SubjectId">Select Subject</label>
                            <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectList"></select>
                        </div>
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a asp-controller="Course" asp-action="index" class="btn btn-danger">cancel</a>
                    </form>
                </div>
            </div>

        </div>

    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}