@model LMSWeb.Models.CourseViewModel
<div>
    <form method="post">
        <div class="row">
            <div class="col-sm-12 col-lg-10">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">Delete Course</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <form>
                            <input asp-for="Id" hidden />
                            <div class="form-group">
                                <label class="form-label" asp-for="Title"></label>
                                <input asp-for="Title" disabled class="form-control">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-label" asp-for="Description"></label>
                                <input asp-for="Description" disabled class="form-control">
                                <span asp-validation-for="Description" class=text-danger></span>
                            </div>
                            <div class="form-group">
                                <label class="form-label" asp-for="Duration"></label>
                                <input asp-for="Duration" disabled class="form-control">
                                <span asp-validation-for="Duration" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-label" asp-for="Price"></label>
                                <input asp-for="Price" disabled class="form-control">
                                <span asp-validation-for="Price"  class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-label" asp-for="Prerequisites"></label>
                                <input asp-for="Prerequisites" disabled class="form-control">
                                <span asp-validation-for="Prerequisites" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-label" asp-for="Level"></label>
                                <select asp-for="Level" disabled class="form-control" asp-items="ViewBag.AvailableLevels"></select>

                            </div>

                            <div class="form-group">
                                <label class="form-label" asp-for="Status"></label>
                                <select asp-for="Status" class="form-control" asp-items="ViewBag.AvailableOptions"></select>
                            </div>
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-controller="Course" asp-action="index" class="btn btn-outline">cancel</a>
                        </form>
                    </div>
                </div>

            </div>

        </div>
    </form>
</div>
