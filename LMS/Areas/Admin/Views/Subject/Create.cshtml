@model LMSWeb.Models.SubjectViewModel;
<div>
    <div class="row">
        <div class="col-sm-12 col-lg-10">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title">Add New Subject</h4>
                    </div>
                </div>
                <div class="card-body">
                    
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label class="form-label" asp-for="Name" ></label>
                            <input asp-for="Name" class="form-control" >
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label" asp-for="Level"></label>
                            <select asp-for="Level" class="form-control" asp-items="ViewBag.AvailableLevels">
                                <option value="">--- Select Level ---</option>
                            </select>
                            <span asp-validation-for="Level" class="text-danger"></span>

                        </div>

                        <div class="form-group">
                            <label class="form-label" asp-for="Status"></label>
                            <select asp-for="Status" class="form-control" asp-items="ViewBag.AvailableOptions">
                                <option value="">--- Select Status ---</option>
                            </select>
                            <span class="text-danger" asp-validation-for="Status"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label" asp-for="ResourceScope" ></label>
                            <input asp-for="ResourceScope" class="form-control">
                        </div>
                       
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a asp-controller="Subject" asp-action="index" class="btn btn-danger">cancel</a>
                    </form>
                </div>
            </div>

        </div>

    </div>
</div>
