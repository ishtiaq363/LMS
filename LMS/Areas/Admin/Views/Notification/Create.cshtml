@model LMSWeb.Models.NotificationViewModel;
<div>
    <div class="row">
        <div class="col-sm-12 col-lg-10">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title">Add New Notification</h4>
                    </div>
                </div>
                <div class="card-body">

                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">

                            <label class="form-label" asp-for="BatchId">Select Batch</label>
                            <select asp-for="BatchId" class="form-control" asp-items="ViewBag.BatchList">
                                <option value="">--- Select Batch ---</option>
                            </select>
                            <span asp-validation-for="BatchId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-label" asp-for="Title"></label>
                            <input asp-for="Title" class="form-control">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-label" asp-for="Content"></label>
                            <input asp-for="Content" class="form-control">
                            <span asp-validation-for="Content" class=text-danger></span>
                        </div>
                        <div class="form-group">
                            <label class="form-label" asp-for="DateCreated"></label>
                            <input type="date" asp-for="DateCreated" class="form-control">
                            <span asp-validation-for="DateCreated" class=text-danger></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-controller="Notification" asp-action="index" class="btn btn-danger">cancel</a>
                    </form>
                </div>
            </div>

        </div>

    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}